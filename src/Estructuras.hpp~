#ifndef ESTRUCTURAS_HPP
#define ESTRUCTURAS_HPP

#include <string>
#include <iostream>

namespace agenda {

struct redSocial {
	std::string twitter;
	std::string facebook;
	std::string gPlus;
	std::string url;
};


struct direccionPostal {
	std::string municipio;
	std::string provincia;
	std::string calle;
	std::string portal;
	int piso;
	std::string puerta;
	int codigoPostal;
};


void imprimeRedSocial(redSocial red){

	std::cout << "twitter: " << red.twitter;
	std::cout << "facebook: " << red.facebook;
	std::cout << "gPlus: " << red.gPlus;
	std::cout << "url: " << red.url;
}

void imprimeDireccionPostal(direccionPostal dir){

	std::cout << "Municipio: " << dir.municipio;
	std::cout << "Provincia: " << dir.provincia;
	std::cout << "Calle: " << dir.calle;
	std::cout << "Portal: " << dir.portal;
	std::cout << "Piso : " << dir.piso;
	std::cout << "Puerta: " << dir.puerta;
	std::cout << "Codigo Postal : " << dir.codigoPostal;

}
}
#endif
